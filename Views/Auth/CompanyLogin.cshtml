@model WMS_Application.Models.TblCompany;
@{
    Layout = "/Views/Shared/_mainLayout.cshtml";
    // Layout = null;
    ViewData["Title"] = "Company Login";
}
<html lang="en">
<head>
    <title>Register for WMS</title>
    <style>
        label.error {
            color: red !important;
        }
    </style>
</head>
<body class="account-page">
    <div id="global-loader">
        <div class="whirly-loader"></div>
    </div>
    <div class="main-wrapper">
        <div class="account-content">
            <div class="login-wrapper">
                <div class="login-content">
                    <div class="login-userset">
                        <div class="login-userheading">
                            <h3>Sign In</h3>
                            <h4>Please login to your account</h4>
                            <div class="signinform">
                                <h4>Not a Company Admin? <a href="~/Auth/Login" class="hover-a">Login</a></h4>
                            </div>
                        </div>
                        <form id="companyLogin">
                            <div class="form-login">
                                <label>Email</label>
                                <div class="form-addons">
                                    <input type="email" asp-for="Email" placeholder="Enter your email or Username here ">
                                    <img src="~/assets/img/icons/mail.svg" alt="img">
                                </div>
                            </div>
                            <div class="form-login">
                                <label>Password</label>
                                <div class="pass-group">
                                    <input type="password" asp-for="PasswordHash" class="pass-input" placeholder="Enter your password">
                                    <span class="fas toggle-password fa-eye-slash"></span>
                                </div>
                            </div>

                            @* <div class="pass-group"> *@
                            @*     <input type="checkbox" asp-for="RememberMe"> Remember Me *@
                            @* </div> *@
                            @* <div class="form-login"> *@
                            @*     <div class="alreadyuser"> *@
                            @*         <h4><a href="~/Auth/ForgotPassword" class="hover-a">Forgot Password?</a></h4> *@
                            @*     </div> *@
                            @* </div> *@
                            <div class="form-login">
                                <button type="submit" id="btnLogin" class="btn btn-login">
                                    <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                                    Sign In
                                </button>
                            </div>
                        </form>
                        <div class="signinform text-center">
                            <h4>Don’t have an account? <a href="~/Auth/CompanyRegistration" class="hover-a">Sign Up</a></h4>
                        </div>
                    </div>
                </div>
                <div class="login-img">
                    <img src="~/assets/img/login.jpg" alt="img">
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="/js/Login.js"></script>
    }
</body>
</html>
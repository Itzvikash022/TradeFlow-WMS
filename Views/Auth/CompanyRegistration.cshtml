@model WMS_Application.Models.TblCompany

@{
    Layout = "/Views/Shared/_mainLayout.cshtml";
    ViewData["Title"] = "Company Registration";
}
<html lang="en">
<head>
    <title>Register for WMS</title>
    <link rel="stylesheet" href="~/css/MoreDetails.css" />

</head>
<body class="account-page">
    <div class="main-wrapper">
        <div class="account-content">
            <div class="login-wrapper">
                <div class="login-content">
                    <div class="login-userset">
                        <form id="companyRegistration" enctype="multipart/form-data">
                            <div class="card">
                                <div class="card-body">
                                    <div class="login-userheading">
                                        <h3>Company Registration</h3>
                                    </div>
                                    <div class="row">
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label>Company Name</label>
                                                    <input type="text" asp-for="CompanyName" placeholder="Enter your company name here">
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="form-login">
                                                    <label>Phone Number</label>
                                                    <input type="tel" asp-for="PhoneNumber" id="PhoneNumber" placeholder="Enter Phone Number">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="text" asp-for="Email" placeholder="Enter Email here">
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-9 col-12">
                                                <div class="form-group">
                                                    <label>State</label>
                                                    <select class="js-example-basic-single select2" asp-for="State" data-selected="@Model.State">
                                                        <option value="">Select State</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-6 col-sm-9 col-12">
                                                <div class="form-group">
                                                    <label>City</label>
                                                    <select class="js-example-basic-single select2" asp-for="City" data-selected="@Model.City">
                                                        <option value="">Select City</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label>Password</label>
                                                    <div class="pass-group">
                                                        <input type="password" asp-for="PasswordHash" class="pass-input" placeholder="Enter your password">
                                                        <span class="fas toggle-password fa-eye-slash"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        <div class="col-lg-6 col-sm-9 col-12">
                                            <div class="form-group">
                                                <label>GST No.</label>
                                                <input type="text" asp-for="Gst" placeholder="Enter GST No. here">
                                            </div>
                                        </div>
                                            <div class="col-lg-6 col-sm-9 col-12">
                                                <div class="form-group">
                                                    <label>Pincode</label>
                                                    <input type="text" asp-for="Pincode" placeholder="Enter Pincode here">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label>Address</label>
                                                    <input type="text" asp-for="Address" placeholder="Enter Address here">
                                                </div>
                                            </div>
                                            <div class="col-lg-8">
                                                <div class="form-group">
                                                    <label>Company Logo</label>
                                                    <div class="image-upload">
                                                        <input type="file" asp-for="LogoFile">
                                                        <div class="image-uploads">
                                                            <img src="~/assets/img/icons/upload.svg" alt="img">
                                                            <h4>Drag and drop a file to upload</h4>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="image-preview-container">
                                                    <img src="#" alt="Image Preview" id="imagePreview" style="display: none;" />
                                                    <p id="imagePreviewText">No image selected</p>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-lg-12">
                                                <button type="submit" id="btnCompanyRegistration" class="btn btn-submit me-2">
                                                    <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                                                    Register
                                                </button>
                                                </div>
                                            </div>
                                        <div class="signinform text-center">
                                            <h4>Already a Company Admin? <a href="~/Auth/CompanyLogin" class="hover-a">Company Login</a></h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="login-img">
                    <img src="~/assets/img/login.jpg" alt="img">
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <script src="~/js/CompanyRegistration.js"></script>
    }
</body>
</html>
@model WMS_Application.Models.User;
@{
    Layout = "/Views/Shared/_mainLayout.cshtml";
    // Layout = null;
    ViewData["Title"] = "Forgot Password";
}
<html lang="en">
<head>
    <title>Register for WMS</title>
    <style>
        label.error {
            color: red !important;
        }
    </style>
</head>
<body class="account-page">
    <div class="main-wrapper">
        <div class="account-content">
            <div class="login-wrapper">
                <div class="login-content">
                    <div class="login-userset">
                        <div class="login-userheading">
                            <h3>Forgot Password?</h3>
                        </div>
                        <form id="forgotPassword">
                            <div class="form-login">
                                <label>Email Address</label>
                                <div class="form-addons">
                                    <input type="text" asp-for="Email" id="Email" placeholder="Enter your email here">
                                    <img src="~/assets/img/icons/mail.svg" alt="img">
                                </div>
                            </div>
                            <div class="form-login">
                                <button type="submit" id="btnSubmit" class="btn btn-login">Send Link</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="login-img">
                    <img src="~/assets/img/login.jpg" alt="img">
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/Login.js"></script>
    }
</body>
</html>
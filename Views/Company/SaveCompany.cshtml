@model WMS_Application.Models.TblCompany;

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div id="global-loader">
    <div class="whirly-loader"> </div>
</div>

<div class="main-wrapper">

    <div class="page-wrapper">
        <div class="content">
            <div class="page-header">
                <div class="page-title">
                    <h4>Admin Management</h4>
                    <h6>Add/Update User</h6>
                </div>
            </div>

            <div class="card">
                <form enctype="multipart/form-data" id="SaveCompany">
                    <div class="card-body">
                        <div class="row">

                            <input type="text" asp-for="CompanyId" readonly hidden="true">
                            <input type="text" asp-for="CreatedAt" readonly hidden="true">
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>Company Name</label>
                                    <input type="text" asp-for="CompanyName">
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>Contact Person Name</label>
                                    <input type="text" asp-for="ContactPerson">
                                </div>
                            </div>

                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>Phone</label>
                                    <input type="text" asp-for="PhoneNumber">
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" asp-for="Email"/>
                                </div>
                            </div>

                            
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>GST Number</label>
                                    <input type="text" asp-for="Gst"/>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-9 col-12">
                                <div class="form-group">
                                    <label>State</label>
                                    <select class="js-example-basic-single select2" asp-for="State">
                                        <option value="">Select State</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-9 col-12">
                                <div class="form-group">
                                    <label>City</label>
                                    <select class="js-example-basic-single select2" asp-for="City">
                                        <option value="">Select City</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-8 col-sm-9 col-12">
                                <div class="form-group">
                                    <label>Address</label>
                                    <input type="text" placeholder="Enter Address" asp-for="Location">
                                </div>
                            </div>
                            <div class="col-lg-3 col-sm-6 col-12">
                                <div class="form-group">
                                    <label>Pincode</label>
                                    <input type="text" asp-for="Pincode" />
                                </div>
                            </div>
                            <div class="col-lg-8">
                                <div class="form-group">
                                    <label> User Image</label>
                                    <div class="image-upload">
                                        <input type="file" asp-for="LogoFile">
                                        <div class="image-uploads">
                                            <img src="~/assets/img/icons/upload.svg" alt="img">
                                            <h4>Drag and drop a file to upload</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="image-preview-container">
                                    <img src="#" alt="Image Preview" id="imagePreview" style="display: none;" />
                                    <p id="imagePreviewText">No image selected</p>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <button type="submit" id="btnSubmit" class="btn btn-submit me-2">
                                    <span class="spinner-border spinner-border-sm d-none" id="btnLoader" role="status" aria-hidden="true"></span>
                                    Submit
                                </button>
                                <a href="~/Company" class="btn btn-cancel">Cancel</a>
                            </div>

                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/SaveCompany.js"></script>
}
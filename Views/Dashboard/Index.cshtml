@model WMS_Application.DTO.DashboardStatsDTO;

@{
    Layout = "/Views/Shared/_Layout.cshtml";
    // Layout = null;
    ViewData["Title"] = "Dashboard";
}
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="dash-widget">
                    <div class="dash-widgetimg">
                        <span><img src="assets/img/icons/dash1.svg" alt="img"></span>
                    </div>
                    <div class="dash-widgetcontent">
                        <h5>Rs. <span class="counters" data-count="@Model.TotalSalesThisMonth">Rs. @Model.TotalSalesThisMonth</span></h5>
                        <h6>Total Sales This Month</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="dash-widget dash1">
                    <div class="dash-widgetimg">
                        <span><img src="assets/img/icons/dash2.svg" alt="img"></span>
                    </div>
                    <div class="dash-widgetcontent">
                        <h5>Rs. <span class="counters" data-count="@Model.TotalPurchaseThisMonth">Rs. @Model.TotalPurchaseThisMonth</span></h5>
                        <h6>Total Purchase This Month</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="dash-widget dash2">
                    <div class="dash-widgetimg">
                        <span><img src="assets/img/icons/dash3.svg" alt="img"></span>
                    </div>
                    <div class="dash-widgetcontent">
                        <h5><span class="counters" data-count="@Model.TotalOrdersThisMonth">@Model.TotalOrdersThisMonth</span></h5>
                        <h6>Total Orders This Month</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6 col-12">
                <div class="dash-widget dash3">
                    <div class="dash-widgetimg">
                        <span><img src="assets/img/icons/dash4.svg" alt="img"></span>
                    </div>
                    <div class="dash-widgetcontent">
                        <h5><span class="counters" data-count="@Model.OverallPendingOrders">@Model.OverallPendingOrders</span></h5>
                        <h6>Overall Pending Orders</h6>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 col-12 d-flex">
                <div class="dash-count">
                    <div class="dash-counts">
                        <h4>@Model.Buyers</h4>
                        <h5>Customers</h5>
                    </div>
                    <div class="dash-imgs">
                        <i data-feather="user"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 col-12 d-flex">
                <div class="dash-count das1">
                    <div class="dash-counts">
                        <h4>@Model.Sellers</h4>
                        <h5>Suppliers</h5>
                    </div>
                    <div class="dash-imgs">
                        <i data-feather="user-check"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 col-12 d-flex">
                <div class="dash-count das2">
                    <div class="dash-counts">
                        <h4>@Model.EmployeeCount</h4>
                        <h5>Employees</h5>
                    </div>
                    <div class="dash-imgs">
                        <i data-feather="file-text"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-sm-6 col-12 d-flex">
                <div class="dash-count das3">
                    <div class="dash-counts">
                        <h4>@Model.UniqueProductQty</h4>
                        <h5>Products</h5>
                    </div>
                    <div class="dash-imgs">
                        <i data-feather="file"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6 col-12 d-flex">
                <div class="dash-count das2">
                    <div class="dash-counts">
                        <h4>@Model.TotalProductQty</h4>
                        <h5>Total Products Quantity</h5>
                    </div>
                    <div class="dash-imgs">
                        <i data-feather="file-text"></i>
                    </div>
                </div>
            </div>
          
        </div>

        <div class="row">
            <div class="col-lg-7 col-sm-12 col-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Purchase & Sales</h5>
                        <div class="graph-sets">
                            <ul>
                                <li>
                                    <span>Sales</span>
                                </li>
                                <li>
                                    <span>Purchase</span>
                                </li>
                            </ul>
                            <div class="dropdown">
                                <button class="btn btn-white btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    2025 <img src="assets/img/icons/dropdown.svg" alt="img" class="ms-2">
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li>
                                        <a href="javascript:void(0);" class="dropdown-item">2025</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);" class="dropdown-item">2024</a>
                                    </li>
                                    <li>
                                        <a href="javascript:void(0);" class="dropdown-item">2023</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div id="sales_charts"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 col-sm-12 col-12 d-flex">
                <div class="card flex-fill">
                    <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                        <h4 class="card-title mb-0">Recently Added Products</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product Id</th>
                                        <th>Products</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var product in Model.RecentlyAddedProducts)
                                    {
                                        <tr>
                                            <td>@product.ProductId</td>
                                            <td class="productimgname">
                                                <a class="product-img">
                                                    <img src="@product.ProductImagePath" alt="product">
                                                </a>
                                                <a href="">@product.ProductName</a>
                                            </td>
                                            <td>Rs. @product.PricePerUnit</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["toast"] != null)
    {
        <script>

            $(document).ready(function () {
                showToast('@TempData["toast"]','@TempData["toastType"]');
            });

        </script>
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const dropdownItems = document.querySelectorAll('.dropdown-item');
            const dropdownButton = document.getElementById('dropdownMenuButton');

            function loadGraph(year) {
                fetch(`/Dashboard/GetSalesPurchaseData?year=${year}`)
                    .then(res => res.json())
                    .then(data => {
                        const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
                        const sales = data.map(item => item.sales);
                        const purchase = data.map(item => item.purchase * -1); // For visual downwards

                        const options = {
                            series: [
                                { name: 'Sales', data: sales },
                                { name: 'Purchase', data: purchase }
                            ],
                            chart: {
                                type: 'bar',
                                height: 350,
                                stacked: true
                            },
                            colors: ['#2ECC71', '#E74C3C'],
                            xaxis: {
                                categories: months
                            },
                            plotOptions: {
                                bar: {
                                    columnWidth: '50%',
                                    borderRadius: 5
                                }
                            },
                            dataLabels: {
                                enabled: false
                            },
                            tooltip: {
                                y: {
                                    formatter: val => `₹ ${Math.abs(val)}`
                                }
                            }
                        };

                        document.querySelector("#sales_charts").innerHTML = "";
                        const chart = new ApexCharts(document.querySelector("#sales_charts"), options);
                        chart.render();
                    });
            }

            dropdownItems.forEach(item => {
                item.addEventListener('click', function () {
                    const selectedYear = this.textContent.trim();
                    dropdownButton.innerHTML = `${selectedYear} <img src="assets/img/icons/dropdown.svg" alt="img" class="ms-2">`;
                    loadGraph(selectedYear);
                });
            });

            // Initial Load
            loadGraph(new Date().getFullYear());
        });
    </script>



}